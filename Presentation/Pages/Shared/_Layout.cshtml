<body id="page-top">
<!-- Navigation-->
<nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
    <div class="container">
        <a style="text-decoration: none; color: black" href="/HomePage">
            <h3>ARTOln</h3>
        </a>
        <div class="header-container1-right">

                    <div class="search-header">
                    <form id="searchForm" asp-page-handler="HomePage" method="get">
                        <input type="text" id="txtsearch" placeholder="Tìm kiếm..." name="search" required>
                        <button type="submit"><i class="fa fa-search"></i></button>
                    </form>

                    <script>
                        document.getElementById("searchForm").addEventListener("submit", function () {
                            var searchTerm = document.getElementById("txtsearch").value;
                            document.getElementById("search").value = searchTerm;
                        });
                    </script>
                    </div>
        </div>
                
            <div class="menu-acc">
                @if(Context.Session.GetString("Token") is null){
                    
                    <div class="header_Login-img">
                        <img style="width: 36px;height: 36px; border-radius: 50%;" src="~/assets/img/avatar1.png" alt="login" />
                        <div class="header-Login header_Login-ht">
                            <p style="margin-top: 5px;" class="header-Login-p"><a asp-page="/LoginPage">Login</a></p>

                        </div>
                    </div>
                }
                else{
                    <div class="header_Login-img">
                        <img style="width: 36px;height: 36px; border-radius: 50%;" src="~/assets/img/avatar1.png" alt="login" />
                        <div class="header-Login header_Login-ht">
                            <p style="margin-top: 5px;" class="header-Login-p"><a asp-page="/ProfilePage" >My Profile</a></p>
                            <p class="header-Login-p"><a href="#" class="address-button">Transaction History</a></p>
                            <p style="" class="header-Login-p"><a asp-page="HomePage" asp-page-handler="logout">Logout</a></p>

                        </div>
                    </div>
                    <div class="" style="width: contain; color: darkblue; margin: 5px;">@Context.Session.GetString("Username")</div>
                    
                }   
            </div>
            <div class="cart-header">
                <a href="#"><i style="    font-size: 30px;color: black;" class="fa fa-shopping-cart"></i><span>3</span></a>
            </div>
    </div>
 </nav>
        
        @RenderBody()
        
        <!-- Contact-->
        <section class="contact-section bg-black">
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5">
                    <div class="col-md-4 mb-3 mb-md-0">
                        <div class="card py-4 h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-map-marked-alt text-primary mb-2"></i>
                                <h4 class="text-uppercase m-0">Address</h4>
                                <hr class="my-4 mx-auto" />
                                <div class="small text-black-50">4923 Market Street, Orlando FL</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3 mb-md-0">
                        <div class="card py-4 h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-envelope text-primary mb-2"></i>
                                <h4 class="text-uppercase m-0">Email</h4>
                                <hr class="my-4 mx-auto" />
                                <div class="small text-black-50"><a href="#!">hello@yourdomain.com</a></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3 mb-md-0">
                        <div class="card py-4 h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-mobile-alt text-primary mb-2"></i>
                                <h4 class="text-uppercase m-0">Phone</h4>
                                <hr class="my-4 mx-auto" />
                                <div class="small text-black-50">+1 (555) 902-8832</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="social d-flex justify-content-center">
                    <a class="mx-2" href="#!"><i class="fab fa-twitter"></i></a>
                    <a class="mx-2" href="#!"><i class="fab fa-facebook-f"></i></a>
                    <a class="mx-2" href="#!"><i class="fab fa-github"></i></a>
                </div>
            </div>
        </section>
        <!-- Footer-->
        <footer class="footer bg-black small text-center text-white-50"><div class="container px-4 px-lg-5">Copyright &copy; Your Website 2023</div></footer>
