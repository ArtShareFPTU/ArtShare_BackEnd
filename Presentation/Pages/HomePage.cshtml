@page
@using System.Reflection
@model Presentation.Pages.HomePage

@{
    Layout = "Shared/_Layout";
    ViewData["Title"] = "HomePage";
}
<style>
    .container1 {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        margin: 40px 20px 0 20px;
    }

        .container1 .heading {
            width: 50%;
            padding-bottom: 50px;
        }

        .container1 .box {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
        }

            .container1 .box .dream {
                display: flex;
                flex-direction: column;
                width: 32.5%;
            }

                .container1 .box .dream img {
                    width: 100%;
                    padding-bottom: 15px;
                    border-radius: 5px;
                }
</style>

<!-- Masthead-->
<header class="masthead">
    <div class="container px-4 px-lg-5 d-flex h-100 align-items-center justify-content-center">
        <div class="d-flex justify-content-center">

        </div>
    </div>
</header>

<div class="container1">

    <div class="box">
        <div class="dream">
            @foreach (var dream in Model.Artwork)
            {
                <img src="@dream.Url" alt="@dream.Description" title="@dream.Title">
            }
        </div>
        <div class="dream">
            <img src="assets/img/art5.jpg" alt="">
            <img src="assets/img/bg-masthead.jpg" alt="">
            <img src="assets/img/bg-signup.jpg" alt="">
            <img src="assets/img/demo-image-01.jpg" alt="">
        </div>
        <div class="dream">
            <img src="assets/img/demo-image-01.jpg" alt="">
            <img src="assets/img/art3.jpg" alt="">
            <img src="assets/img/bg-signup.jpg" alt="">
            <img src="assets/img/demo-image-02.jpg" alt="">
        </div>
    </div>
</div>