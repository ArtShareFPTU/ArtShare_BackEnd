@page
@model Presentation.Pages.ArtworkTags.DeleteModel

@{
    Layout = "Shared/_Layout";
    ViewData["Title"] = "Delete";
}

@if (TempData["AnnounceMessage"] != null)
{
    <div class="alert alert-primary" role="alert">
        @TempData["AnnounceMessage"]
    </div>
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>ArtworkTag</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArtworkTag.Artwork)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArtworkTag.Artwork.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArtworkTag.Tag)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArtworkTag.Tag.Id)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="ArtworkTag.Id"/>
        <div class="text-center">
            <input type="submit" value="Delete" class="btn btn-danger"/> |
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>