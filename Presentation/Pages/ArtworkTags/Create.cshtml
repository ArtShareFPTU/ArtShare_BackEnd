@page
@model Presentation.Pages.ArtworkTags.CreateModel

@{
    ViewData["Title"] = "Create";
}

@if (TempData["AnnounceMessage"] != null)
{
    <div class="alert alert-primary" role="alert">
        @TempData["AnnounceMessage"]
    </div>
}

<h1>Create</h1>

<h4>ArtworkTag</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="ArtworkTag.Id" class="form-label"></label>
                <input asp-for="ArtworkTag.Id" class="form-control" />
                <span asp-validation-for="ArtworkTag.Id" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ArtworkTag.ArtworkId" class="form-label"></label>
                <select asp-for="ArtworkTag.ArtworkId" class="form-control">
                    @foreach (var item in Model.Artworks)
                    {
                        <option value="@item.Id">@item.Id</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="ArtworkTag.TagId" class="form-label"></label>
                <select asp-for="ArtworkTag.TagId" class="form-control">
                    @foreach (var item in Model.Tags)
                    {
                        <option value="@item.Id">@item.Id</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</div>

